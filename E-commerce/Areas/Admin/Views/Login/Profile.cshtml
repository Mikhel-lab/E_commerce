@{
	ViewData["Title"] = "Profile";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model E_commerce.Models.Account


<section class="content-header">
	<h1>
		Admin Profile
	
	</h1>

</section>

<section>
	<div class="content">
		<div class="row">
			<div class="col-md-6">
				<!-- general form elements -->
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title">Account Informations</h3>
					</div>
					<!-- /.box-header -->
					<!-- form start -->
					<span class="text-green">@ViewBag.msg</span>
					<form asp-area="admin" asp-controller="login" asp-action="profile" role="form">
						<div class="box-body">
							<div class="form-group">
								<label for="username">Username</label>
								<input type="text" required="required" class="form-control" id="username" placeholder="Username" asp-for="Username">
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" required="required" class="form-control" id="password" placeholder="Password" asp-for="Password">
							</div>

							<div class="form-group">
								<label for="fullName">Full Name</label>
								<input type="text" required="required" class="form-control" id="fullName" placeholder="Enter your full name" asp-for="FullName">
							</div>

							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" required="required" class="form-control" id="email" placeholder="Enter your email address" asp-for="Email">
							</div>
							@*<div class="checkbox">
								<label>
									<input type="checkbox" asp-for="Status">Status
								</label>
							</div>*@

						</div>
						<!-- /.box-body -->

						<div class="box-footer">
							<button type="submit" class="btn btn-primary">Save</button>
							<input type="hidden" asp-for="Id"/>
						</div>
					</form>
				</div>
				
			
				<!-- /.box -->

			</div>
		</div>
	</div>
</section>