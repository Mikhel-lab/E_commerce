@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model E_commerce.Models.SlideShow


<section class="content-header">
	
	<h2>Add New SlideShow</h2>

</section>

<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">SlideShow Information</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<form method="Post" asp-area="admin" asp-controller="slideshow" asp-action="add" enctype="multipart/form-data">
					<div class="box-body">

						<div class="form-group">
							<label for="name">Photo</label>
							<input type="file" class="form-control" name="photo" accept="image/*">
						</div>

						<div class="form-group">
							<label for="title">Title</label>
							<input type="text" class="form-control" asp-for="Title">
						</div>

						<div class="form-group">
							<label>Description</label>
							<textarea class="form-control" rows="3" asp-for="Description"></textarea>
							@*<input type="text" class="form-control" >*@
						</div>

						<div class="checkbox">
							<label>
								<input type="checkbox" asp-for="Status">Status
							</label>
						</div>
					</div>
					<!-- /.box-body -->

					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>