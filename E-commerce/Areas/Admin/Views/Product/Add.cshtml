@{
	ViewData["Title"] = "Add";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model E_commerce.Areas.Admin.Models.ViewModels.ProductViewModel


<section class="content-header">
	
	<h2>Add New Product</h2>

</section>

<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Product Information</h3>
				</div>
				<!-- /.box-header -->
				<!-- form start -->
				<form method="Post" asp-area="admin" asp-controller="product" asp-action="add" enctype="multipart/form-data">
					<div class="box-body">

						<div class="form-group">
							<label for="title">Name</label>
							<input type="text" class="form-control" asp-for="Product.Name" required="required">
						</div>

						<div class="form-group">
							<label>Description</label>
							<textarea class="form-control" rows="3" asp-for="Product.Description"></textarea>
							@*<input type="text" class="form-control" >*@
						</div>


						<div class="form-group">
							<label>Details</label>
							<textarea class="form-control" rows="3" asp-for="Product.Details"></textarea>
							@*<input type="text" class="form-control" >*@
						</div>

						<div class="form-group">
							<label for="title">Price</label>
							<input type="number" min="0" class="form-control" asp-for="Product.Price" required="required">
						</div>

						<div class="form-group">
							<label for="title">Quantity</label>
							<input type="number" class="form-control" asp-for="Product.Quantity" required="required" min="0">
						</div>

						@*<div class="form-group">
			<label for="name">Photo</label>
			<input type="file" class="form-control" name="photo" accept="image/*">
		</div>*@



						<div class="checkbox">
							<label>
								<input type="checkbox" asp-for="Product.Status">Status
							</label>
						</div>

						<div class="checkbox">
							<label>
								<input type="checkbox" asp-for="Product.Featured">Featured
							</label>
						</div>

						<div class="form-group">
							<label>Category</label>
							<select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control">
							</select>
						</div>

					</div>
					<!-- /.box-body -->

					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>